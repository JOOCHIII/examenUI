<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="#FFFFFF">
        <ImageView
            android:id="@+id/flechaa"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/atrasflecha"
            android:contentDescription="Back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/menu"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/menu"
            android:contentDescription="Menu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



        <ImageView
            android:id="@+id/flecha"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:contentDescription="Logo"
            android:src="@drawable/cofre"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titulo" />
        <TextView
            android:id="@+id/titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:contentDescription="Logo"
            android:src="@drawable/cofre"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titulo" />

        <LinearLayout
            android:id="@+id/input_fields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logo">

            <EditText
                android:id="@+id/email"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="#F2F2F2"
                android:hint="Enter email"
                android:inputType="textEmailAddress"
                android:minHeight="51dp"
                android:padding="12dp" />

            <RelativeLayout
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/enter_password"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:background="#F2F2F2"
                    android:hint="Confirm password"
                    android:inputType="textPassword"
                    android:padding="12dp"
                    android:paddingEnd="50dp" /> />

                <ImageView
                    android:id="@+id/password_eye"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/descarga" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="290dp"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:background="#F2F2F2"
                    android:hint="Confirm password"
                    android:inputType="textPassword"
                    android:padding="12dp"
                    android:paddingEnd="50dp" />

                <ImageView
                    android:id="@+id/confirm_password_eye"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/descarga" />
            </RelativeLayout>
        </LinearLayout>

        <Button
            android:id="@+id/botonsign"
            android:layout_width="290dp"
            android:layout_height="51dp"
            android:layout_marginTop="12dp"
            android:text="Sign Up"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/marco"
            app:layout_constraintTop_toBottomOf="@id/input_fields" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="or"
            app:layout_constraintBottom_toTopOf="@+id/redes"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/botonsign" />


        <LinearLayout
            android:id="@+id/redes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/botonsign">

            <ImageView
                android:id="@+id/iconofk"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/botonrectangular"
                android:contentDescription="Facebook"

                android:padding="15dp"
                android:src="@drawable/facebook" />

            <ImageView
                android:id="@+id/iconotw"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/botonrectangular"
                android:contentDescription="Twitter"
                android:padding="15dp"
                android:src="@drawable/twiter" />

            <ImageView
                android:id="@+id/linkedin_icon"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/botonrectangular"
                android:contentDescription="LinkedIn"
                android:padding="15dp"
                android:src="@drawable/linkedin" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/login_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/redes">

            <TextView
                android:id="@+id/login_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account?"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/texto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/login_text"
                android:layout_marginStart="4dp"
                android:onClick="openSignInScreen"
                android:text="Sign In"
                android:textColor="#FF9800"
                android:textSize="14sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/linea"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_below="@id/texto"
                android:layout_alignStart="@id/texto"
                android:layout_alignEnd="@id/texto"
                android:background="#FF9800"
                 />
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
